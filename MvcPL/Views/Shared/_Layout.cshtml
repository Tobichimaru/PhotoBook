@using Microsoft.Web.Samples
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Your photo book!</title>
    <link rel="shortcut icon" type="image/ico" href="~/Content/Images/logo.png"/>

    @Styles.Render("~/bundles/bootstrap_css")
    @Styles.Render("~/bundles/css")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/blueimp")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/js")

    @Sprite.ImportStylesheet("~/App_Sprites/")
</head>
<body>
<div class="navbar navbar-default">
    <div class="container" id="navbar-container">
        <div class="navbar-left">
            @Html.ActionLink("PhotoBook", "Index", "Photo", null, new {@class = "navbar-brand"})
            @if (Request.IsAuthenticated)
{
                if (Roles.IsUserInRole(User.Identity.Name, "Admin"))
                {
                        <a href='@Url.Action("UsersEdit", "Home")'>
                            @Sprite.Image("~/App_Sprites/UserEdit.png", new { @style = "margin-top: 15px;" })
                        </a>
                    
                }
            }
        </div>
        <div class="navbar-right">
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
<noscript>
    <h2 class="noscript-warning">Please, enable JavaScript in your web browser!</h2>
</noscript>
<div class="container body-content">
    @RenderBody()
    <hr/>
</div>
<div class="footer">
    <p>
        With contributions by <a href="https://github.com/Tobichimaru/PhotoBook">Tobichimaru</a>, Kate Zabelova - @DateTime.Now.Year
    </p>
</div>

@RenderSection("scripts", false)
</body>
</html>