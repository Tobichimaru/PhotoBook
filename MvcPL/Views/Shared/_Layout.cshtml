<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Your photo book!</title>
    <link rel="shortcut icon" type="image/ico" href="~/Content/Images/logo.ico">
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/blueimp")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/blueimp")
    @Scripts.Render("~/bundles/jquery-blueimp")
    @Scripts.Render("~/bundles/jqueryuno")

</head>
<body>
<div class="navbar navbar-default">
    <div class="container" id="navbar-container">
        <div class="navbar-left">
            @Html.ActionLink("PhotoBook", "Index", "Home", null, new {@class = "navbar-brand"})
            @if (Request.IsAuthenticated)
            {
                if (Roles.IsUserInRole(User.Identity.Name, "Admin"))
                 {
                     <a href='@Url.Action("UsersEdit", "Home")'>
                         <img src="~/Content/Images/UserEdit.ico" style="padding-top: 15px" />
                     </a>
                 }
            }
        </div>
        <div class="navbar-right">
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
<div class="container body-content">
    @RenderBody()
    <hr/>
</div>
<div class="footer">
    <p>
        With contributions by <a href="https://github.com/Tobichimaru/PhotoBook">Tobichimaru</a>, Kate Zabelova - @DateTime.Now.Year
    </p>
</div>

@RenderSection("scripts", false)
</body>
</html>